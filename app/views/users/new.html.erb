<h1>Sign Up</h1>

<%= render partial: 'layouts/errors', locals: {object: @user} %>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :email %>
  <%= f.text_field :email %><br>
  <%= f.label :password %>
  <%= f.password_field :password %><br>
  <%= f.submit "Sign Up" %>
<% end %>

<%= link_to "Log in with Facebook", '/auth/facebook' %>
