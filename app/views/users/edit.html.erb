<h1>Update Information</h1>
<%= form_for @user do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :email %><br>
  <%= f.text_field :email %><br>
  <%= f.label :description %><br>
  <%= f.text_area :description %><br>
  <%= label_tag "Location" %><br>
  <%= text_field_tag name="user[set_location]" %><br>
  <%= f.submit "Update" %>
<% end %>
